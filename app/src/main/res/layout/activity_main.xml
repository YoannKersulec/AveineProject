<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_aveine_logo"/>
    <FrameLayout
        android:id="@+id/fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f8f9f9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageButton
            android:id="@+id/favorite_btn"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="@string/favorite_description"
            />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="#ebf5fb"
            android:layout_weight="3">

            <EditText
                android:id="@+id/label_search"
                android:layout_width="300dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/change_lang"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/ic_flag"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/flag_description"
            />



    </LinearLayout>


</LinearLayout>